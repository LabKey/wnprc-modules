<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="Id"/>
        <column name="date"/>
        <column name="virus" />
        <column name="ViralLoad"/>
        <column name="LogVL"/>
        <column name="wpi/wpi">
            <properties>
                <property name="columnTitle" value="WPI"/>
            </properties>
        </column>
        <column name="wpi/dpi">
            <properties>
                <property name="columnTitle" value="DPI"/>
            </properties>
        </column>
    </columns>
   <sorts>
       <sort column="Id" />
       <sort column="date" descending="true"/>
   </sorts>
</customView>