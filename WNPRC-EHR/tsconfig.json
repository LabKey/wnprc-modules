{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "jsx" : "react",
        "lib": [ "ES5", "DOM", "ScriptHost", "ES2015.Promise", "ES2015.Symbol" ],
        "baseUrl": ".",
        "paths": {
            "*": [ "node_modules/*" ]
        },
        "rootDirs": [ "./src/ts" ]
    },
    "include": [ "src/ts/pages/*.tsx" ]
}