{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "jsx" : "react",
        "lib": [ "ES5", "DOM", "ScriptHost", "ES2015.Promise", "ES2015.Symbol", "ES2015.Iterable" ],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build/compiled-js",
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/@types/*",
                "build/generated-ts/*",
                "../WebUtils/build/generated-ts/*",
                "../WebUtils/src/ts/*"
            ]
        },
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "src/ts/pages/*.tsx"
    ]
}