<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="Id"/>
        <column name="Id/curLocation/room">
            <properties>
                <property name="columnTitle" value="Room"/>
            </properties>
        </column>
        <column name="Id/curLocation/cage">
            <properties>
                <property name="columnTitle" value="Cage"/>
            </properties>
        </column>
        <column name="DaysAlone">
            <properties>
                <property name="columnTitle" value="Days Alone"/>
            </properties>
        </column>
        <column name="AloneSince">
            <properties>
                <property name="columnTitle" value="Alone Since"/>
            </properties>
        </column>
        <column name="Exemptions">
            <properties>
                <property name="columnTitle" value="Exemptions"/>
            </properties>
        </column>
        <column name="ExemptionTitles">
            <properties>
                <property name="columnTitle" value="Exemption Project Titles"/>
            </properties>
        </column>
    </columns>
    <filters>
        <filter column="DaysAlone" operator="neq" value="0"/>
    </filters>
    <sorts>
        <!--<sort column="id" descending="false"/>-->
        <sort column="DaysAlone" descending="true"/>
        <sort column="Id/curLocation/room" descending="false"/>
        <sort column="Id/curLocation/cage" descending="false"/>
    </sorts>
</customView>