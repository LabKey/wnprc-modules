<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="waterTotalByDate" tableDbType="NOT_IN_DB">
                <titleColumn>Water Grid</titleColumn>
                <tableUrl />
                <insertUrl />
                <importUrl />
                <updateUrl />
                <deleteUrl />
                <columns>
                    <column columnName="id">
                        <fk>
                            <fkDbSchema>study</fkDbSchema>
                            <fkTable>animal</fkTable>
                            <fkColumnName>Id</fkColumnName>
                        </fk>
                    </column>
                    <column columnName="qcstate">
                        <fk>
                            <fkDbSchema>core</fkDbSchema>
                            <fkTable>QCState</fkTable>
                            <fkColumnName>rowId</fkColumnName>
                            <fkDisplayColumnName>Label</fkDisplayColumnName>
                        </fk>
                    </column>
                    <column columnName="weight">
                        <conditionalFormats>
                            <conditionalFormat>
                                <filters>
                                    <filter operator="lte" value="0"/>
                                </filters>
                                <backgroundColor>FF0000</backgroundColor>
                            </conditionalFormat>
                        </conditionalFormats>
                    </column>
                    <column columnName="mlsPerKg">
                        <columnTitle>ml Water Per Kg</columnTitle>
                        <conditionalFormats>
                            <conditionalFormat>
                                <filters>
                                    <filter operator="lt" value="20"/>
                                </filters>
                                <backgroundColor>E74C3C</backgroundColor>
                            </conditionalFormat>
                        </conditionalFormats>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>