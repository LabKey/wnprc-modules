{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "jsx" : "react",
        "baseUrl": ".",
        "outDir": "build/compiled-ts",
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/@types/*",
                "bower_components/*",
                "build/generated-ts/*"
            ]
        },
        "lib": ["ES5", "DOM", "ScriptHost", "ES2015.Promise", "ES2015.Symbol"]
    },
    "include": [
      "src/ts/WebUtils.ts",
      "src/ts/legacy.ts"
    ]
}