#!/bin/bash
echo "build ver 1.1"

TAG_IDENTIFIER="docker/21.11_"

echo "value of docker tag"
echo $DOCKER_TAG

if [[ $DOCKER_TAG == $TAG_IDENTIFIER* ]];
then
        SHORT_BRANCH_NAME=${DOCKER_TAG#$TAG_IDENTIFIER}
        echo $SHORT_BRANCH_NAME
else
        SHORT_BRANCH_NAME="master"
fi

echo $SHORT_BRANCH_NAME

docker build --build-arg LABKEY_TEAMCITY_USERNAME=$teamcityUser --build-arg LABKEY_TEAMCITY_PASSWORD=$teamCityPWD --build-arg WNPRC_BRANCH=$SHORT_BRANCH_NAME --rm=true -t $IMAGE_NAME .
