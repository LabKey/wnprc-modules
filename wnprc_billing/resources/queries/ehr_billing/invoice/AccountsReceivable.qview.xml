<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="invoiceNumber"/>
        <column name="invoiceRunId/rowid">
            <properties>
                <property name="columnTitle" value="Invoice Run Id"/>
            </properties>
        </column>
        <column name="invoiceRunId/billingPeriodStart"/>
        <column name="invoiceRunId/billingPeriodEnd"/>
        <column name="invoiceRunId/runDate"/>
        <column name="accountNumber"/>
        <column name="accountNumber/po_number"/>
        <column name="invoiceAmount"/>
        <column name="invoiceSentOn"/>
        <column name="invoiceSentComment"/>
        <column name="paymentAmountReceived"/>
        <column name="paymentReceivedOn"/>
        <column name="paymentReceivedComment"/>
        <column name="balanceDue"/>
        <column name="fullPaymentReceived"/>
    </columns>
    <filters>
        <filter column="accountNumber/type" operator="contains" value="external"/>
    </filters>
</customView>